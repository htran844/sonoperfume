<div class="sign">
    <h2>Tạo mật khẩu mới cho </h2>
    <div id="email" value="<%=email%>">
        <%=email%>
    </div>
    <div class="mat-khau">
        <label for="pass">Mật khẩu mới:</label>
        <input type="password" id="pass">
    </div>
    <div class="re-mat-khau">
        <label for="re-pass">Nhập lại mật khẩu mới:</label>
        <input type="password" id="re-pass">
    </div>
    <button class="btn-newpass">Đổi sang mật khẩu này</button>
</div>