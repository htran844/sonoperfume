<div class="account-wrap">
    <div class="left-account">
        <ul>
            <li class="active"><a href="/tai-khoan">Thông tin</a></li>
            <li><a href="/tai-khoan/don-hang">Đơn đã mua</a></li>
        </ul>
    </div>
    <div class="right-account">
        <div class="account-info">
            <h2>Thông tin tài khoản</h2>
            <div class="right__name">
                <label for="">Tên hiển thị:</label>
                <input type="text" id="name" class="input-text" value="<%= account.name %>">
            </div>
            <div class="right__email">
                <label for="">Email:</label>
                <input type="text" id="email" class="input-text" value="<%= account.email %>">
            </div>
            <div class="right__visono">
                <label for="">Số dư ví Sono:</label>
                <label class="sodu-sono">
                    <%= account.wallet %> đ
                </label>
            </div>
            <div class="right__phone">
                <label for="">Điện thoại:</label>
                <input type="text" id="phone" class="input-text" value="<%= account.phone %>">
            </div>
            <div class="right__address">
                <label for="">Địa chỉ mặc định:</label>
                <textarea id="address" class="input-text"><%= account.address %></textarea>
            </div>
            <button id="btn-cn">Lưu thay đổi</button>
        </div>
        <div class="account-changepass">
            <h2>Đổi mật khẩu mới</h2>
            <div class="old-pass">
                <label for="">Mật khẩu hiện tại:</label>
                <input type="password" id="old-pass" class="input-text">
            </div>
            <div class="new-pass">
                <label for="">Mật khẩu mới:</label>
                <input type="password" id="new-pass" class="input-text">
            </div>
            <div class="renew-pass">
                <label for="">Nhập lại mật khẩu mới:</label>
                <input type="password" id="renew-pass" class="input-text">
            </div>
            <button id="btn-pass">Đổi mật khẩu</button>
        </div>
    </div>
</div>